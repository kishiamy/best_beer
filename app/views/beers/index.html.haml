%h1 Top ten
= form_tag(root_path, method: "get") do
  = label_tag(:name, "Search for:")
  = text_field_tag(:name)
  = submit_tag("Search")
%ol
  -@beers.each do |beer|
    %li
      = beer.name 
      = beer.brand
      -if beer.votes.nil?
        = link_to "Vote!", vote_path(beer.obdb_id), method: :post, class: "vote-link"
      -else 
        = link_to "Votes: #{beer.votes}",  vote_path(beer.obdb_id), method: :post, class: "vote-link"
